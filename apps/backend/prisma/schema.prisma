// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String    @id @default(uuid())
  firstname String    @db.VarChar(30)
  lastname  String    @db.VarChar(30)
  dob       DateTime
  tel       String    @db.VarChar(10)
  email     String    @unique
  password  String
  order     Order[]
}

model Order {
  id            String      @id @default(uuid())
  customer      Customer    @relation(fields: [customerId], references: [id])
  customerId    String
  addressDetail String
  street        String
  subdistrict   String
  zipcode       String      @db.VarChar(5)
  latitude      Decimal     @db.Decimal(8, 6)
  longitude     Decimal     @db.Decimal(9, 6)
  receiverTel   String      @db.VarChar(10)
  totalPrice    Float       @db.Double
  orderDate     DateTime    @default(now())
  sendingDate   DateTime?
  returnDate    DateTime?
  receiver      String
  status        OrderStatus @relation(fields: [statusCode], references: [statusCode])
  statusCode    Int
}

model OrderStatus {
  statusCode    Int         @id @db.Int
  statusDef     String      @db.VarChar(30)
  order         Order[]
}
